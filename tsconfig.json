{
    "compilerOptions": {
        "target": "ES6",
        "module": "ESNext",
        "sourceMap": true,
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "isolatedModules": true,
        "allowJs": true,
        "noEmit": true,
        "allowImportingTsExtensions": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "./node_modules"
    ]
}

